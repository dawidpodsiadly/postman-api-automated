		{
			"name": "/users",
			"item": []
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"packages": {},
				"exec": [
					"try {",
					"    const response = await pm.sendRequest({",
					"        url: pm.variables.get(\"baseUrl\") + \"/auth\",",
					"        method: \"POST\",",
					"        headers: {",
					"            \"Content-Type\": \"application/json\",",
					"        },",
					"        body: {",
					"            mode: \"raw\",",
					"            raw: JSON.stringify({",
					"                email: \"apitesteradmin@tests.com\",",
					"                password: \"chocolate\"",
					"            }),",
					"            options: {",
					"                raw: {",
					"                    language: \"json\"",
					"                }",
					"            }",
					"        }",
					"    });",
					"",
					"    const adminToken = response.json().token;",
					"    pm.collectionVariables.set(\"adminToken\", \"Bearer \" + adminToken);",
					"",
					"} catch (err) {",
					"    console.error(\"Request failed:\", err);",
					"}",
					""
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"packages": {},
