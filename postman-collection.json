	"item": [
		{
			"name": "/auth",
			"item": [
				{
					"name": "GET /auth - Invalid Token",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Should return 401 when Invalid Token\", function () {",
									"    pm.response.to.have.status(401);",
									"    pm.expect(pm.response.json().message).to.include('Invalid token');",
									"});"
								],
								"type": "text/javascript",
								"packages": {}
							}
						},
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									""
								],
								"type": "text/javascript",
								"packages": {}
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer invalidToken"
							}
						],
						"url": "{{baseUrl}}/auth"
					},
					"response": []
				},
				{
